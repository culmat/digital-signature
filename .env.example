# Confluence API Configuration
# Get your API token from: https://id.atlassian.com/manage-profile/security/api-tokens

# Your Confluence instance URL (without trailing slash)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki

# Your Confluence account for API calls (admin account with create space permissions)
CONFLUENCE_EMAIL=your-email@example.com
CONFLUENCE_API_TOKEN=your_api_token_here

# Shared IMAP Configuration (for email OTP verification)
# All test users share the same IMAP host and port
TEST_IMAP_HOST=imap.gmail.com
TEST_IMAP_PORT=993

# Test Users for Browser Automation
# Add as many users as needed: TEST_USER_1_*, TEST_USER_2_*, TEST_USER_3_*, etc.
# Scan stops at the first gap (e.g., if USER_3 is missing, USER_4+ are ignored)

# Required for each user: EMAIL, PASSWORD, NAME
# Optional: IMAP_PASSWORD for IMAP authentication (required for email OTP verification)

TEST_USER_1_EMAIL=user1@example.com
TEST_USER_1_PASSWORD=password1
TEST_USER_1_NAME=Esther l0l
TEST_USER_1_IMAP_PASSWORD=imap_app_password_1

TEST_USER_2_EMAIL=user2@example.com
TEST_USER_2_PASSWORD=password2
TEST_USER_2_NAME=John Doe
# No IMAP for user 2 (email OTP not supported for this user)

# TEST_USER_3_EMAIL=user3@example.com
# TEST_USER_3_PASSWORD=password3
# TEST_USER_3_NAME=Alice Smith
# TEST_USER_3_IMAP_PASSWORD=imap_app_password_3

# Test Configuration
# Prefix for test spaces (will append timestamp)
TEST_SPACE_PREFIX=FORGETEST

# Cleanup test spaces after tests (set to false to keep spaces for debugging)
CLEANUP_AFTER_TESTS=true

# Playwright Configuration
# Run tests in headless mode (set to false to see browser)
HEADLESS=true

# Slow down test execution (milliseconds, useful for debugging)
SLOW_MO=0

# Test timeout in milliseconds
TEST_TIMEOUT=30000
